{
    "app-id" : "io.github.lainsce.Khronos",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.Khronos",
    "finish-args" : [
        "--filesystem=xdg-documents",
        "--filesystem=xdg-download",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=network",
        "--share=ipc"
    ],
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "/bin/vapi*",
        "*.a",
        "*.la",
        "/share/doc",
        "/share/pkgconfig",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/bin/gtk4*",
        "/bin/pango*",
        "/bin/sassc"
    ],
    "modules" : [
        {
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dvapi=true",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/exalm/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "khronos",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/lainsce/khronos/archive/3.5.3.tar.gz",
                    "sha256" : "556d59a76adbf945b8b87e922dac47c2f572ca8b982236d3896e2c90f8d7c96b"
                }
            ]
        }
    ]
}

